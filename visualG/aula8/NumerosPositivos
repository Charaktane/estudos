var
    numero: inteiro
inicio
    repita
        escreval("Digite um número positivo (ou um número negativo para encerrar): ")
        leia(numero)
                se numero >= 0 então
            escreval("Você digitou o número: ", numero)
        senao
            escreval("Programa encerrado. Você digitou um número negativo.")
        fimse
    ate numero < 0
fimalgoritmo
