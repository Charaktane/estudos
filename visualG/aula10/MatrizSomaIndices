var
    matriz: vetor[1..7, 1..8] de inteiro
    i, j: inteiro
inicio
    para i <- 1 até 7 faca
        para j <- 1 até 8 faca
            matriz[i, j] <- i + j 
        fimpara
    fimpara
    escreval("Matriz 7x8 (elementos são a soma dos índices):")
    para i <- 1 até 7 faca
        para j <- 1 até 8 faca
            escreval(matriz[i, j], " ")
        fimpara
        escreval("") // Para pular a linha
    fimpara
fimalgoritmo
