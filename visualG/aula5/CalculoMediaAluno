
var
    nome: caractere
    nota1, nota2, nota3, media: real
inicio
    // Entrada de dados
    escreva("Digite o nome do aluno: ")
    leia(nome)
    
    escreva("Digite a primeira nota: ")
    leia(nota1)
    
    escreva("Digite a segunda nota: ")
    leia(nota2)
    
    escreva("Digite a terceira nota: ")
    leia(nota3)
    
    // Cálculo da média
    media <- (nota1 + nota2 + nota3) / 3
    
    // Exibição do nome e da menção
    escreva("Aluno: ", nome, " - Média: ", media:2:2, " - Situação: ")

    se (media >= 7) entao
        escreva("Aprovado")
    senao
        se (media >= 5) entao
            escreva("Em recuperação")
        senao
            escreva("Reprovado")
        fimse
    fimse
fimalgoritmo
